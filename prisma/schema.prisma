generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Teacher {
  id Int @id @default(autoincrement())
  name String
  score Score[]
  careerId Int 
  career Career @relation(fields: [careerId], references: [id])
}
model Career {
  id Int @id @default(autoincrement())
  name String
  teachers  Teacher[]  
}
model Score {
  id Int @id @default(autoincrement())
  value Int
  teacherId Int 
  teacher Teacher @relation(fields: [teacherId], references: [id])
}